<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/BtnToast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pastelBiru"
                android:text="Toast"
                android:textColor="@color/pastelKuning"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/TxtCounter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pastelKuning"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/pastelBiru"
                android:textSize="250dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/BtnSub"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/pastelMerah"
                    android:text="Sub"
                    android:textColor="@color/pastelKuning"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/BtnCount"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/pastelHijau"
                    android:text="Count"
                    android:textColor="@color/pastelKuning"
                    android:textSize="25dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>